#!/bin/bash
set -e
if ./scripts/only-ui-bumps.sh; then
    exit 0
fi

cleanup()
{
    EXIT=$?
    set +ex
    echo Stopping ranger server
    kill $RANCHER_RUN_PID
    wait $RANCHER_RUN_PID
    if [ $PID != -1 ]; then
      kill $PID
      wait $PID
    fi
    return $EXIT
}

cd $(dirname $0)/..

TB_ORG=ranger

if [ -z "${V2PROV_TEST_DIST}" ] || [ "${V2PROV_TEST_DIST}" = "k3s" ]; then
  V2PROV_TEST_DIST=k3s
  AIRGAP=-airgap
  TB_ORG=k3s-io
else
  LINUX=.linux
fi

if [ -z "${V2PROV_TEST_RUN_REGEX}" ]; then
  V2PROV_TEST_RUN_REGEX="^Test_(General|Provisioning)_.*$"
fi

RUNARG="-run ${V2PROV_TEST_RUN_REGEX}"

export DIST=${V2PROV_TEST_DIST}
export SOME_K8S_VERSION=${SOME_K8S_VERSION}
export TB_ORG=${TB_ORG}

eval "$(grep '^ENV CATTLE_SYSTEM_AGENT' package/Dockerfile | awk '{print "export " $2 "=" $3}')"
eval "$(grep '^ENV CATTLE_WINS_AGENT' package/Dockerfile | awk '{print "export " $2 "=" $3}')"
eval "$(grep '^ENV CATTLE_CSI_PROXY_AGENT' package/Dockerfile | awk '{print "export " $2 "=" $3}')"
eval "$(grep '^ENV CATTLE_KDM_BRANCH' package/Dockerfile | awk '{print "export " $2 "=" $3}')"

if [ -z "${SOME_K8S_VERSION}" ]; then
# Get the last release for $DIST, which is usually the latest version or an experimental version.
# Previously this would use channels, but channels no longer reflect the latest version since
# https://github.com/ranger/ranger/issues/36827 has added appDefaults. We do not use appDefaults
# here for simplicity's sake, as it requires semver parsing & matching. The last release should
# be good enough for our needs.
export SOME_K8S_VERSION=$(curl -sS https://raw.githubusercontent.com/ranger/kontainer-driver-metadata/dev-v2.7/data/data.json | jq -r ".$DIST.releases[-1].version")
fi

echo "Starting ranger server for provisioning-tests using $SOME_K8S_VERSION"
touch /tmp/ranger.log

mkdir -p /var/lib/ranger/$DIST/agent/images
grep PodTestImage ./tests/v2prov/defaults/defaults.go | cut -f2 -d'"' > /var/lib/ranger/$DIST/agent/images/pull.txt
grep MachineProvisionImage ./pkg/settings/setting.go | cut -f4 -d'"' >> /var/lib/ranger/$DIST/agent/images/pull.txt
mkdir -p /usr/share/ranger/ui/assets
curl -sLf https://github.com/ranger/system-agent/releases/download/${CATTLE_SYSTEM_AGENT_VERSION}/ranger-system-agent-amd64 -o /usr/share/ranger/ui/assets/ranger-system-agent-amd64
curl -sLf https://github.com/ranger/system-agent/releases/download/${CATTLE_SYSTEM_AGENT_VERSION}/system-agent-uninstall.sh -o /usr/share/ranger/ui/assets/system-agent-uninstall.sh

run_ranger()
{
    RESTART_COUNT=0
    while sleep 2; do
        if [ "$PID" != "-1" ] && [ ! -e /proc/$PID ]; then
            echo Ranger died
            dump_ranger_logs
            echo K3s logs were:
            echo -e "-----K3S-LOG-DUMP-START-----"
            cat build/testdata/k3s.log | gzip | base64 -w 0
            echo -e "\n-----K3S-LOG-DUMP-END-----"
            set +e
            echo Attempting to kill K3s
            pkill -e k3s
            set -e
            PID=-1
            if [ "$RESTART_COUNT" = "2" ]; then
                echo Ranger died 3 times, aborting
                kill -42 $PWRAPPROC
            fi
            RESTART_COUNT=$((RESTART_COUNT + 1))
            sleep 5
        fi
        if [ "$PID" = "-1" ]; then
          echo Starting ranger server using run
          ./scripts/run >/tmp/ranger.log 2>&1 &
          PID=$!
        fi
        sleep 2
    done
}

dump_ranger_logs()
{
  echo Ranger logs were
  echo -e "-----RANCHER-LOG-DUMP-START-----"
  cat /tmp/ranger.log | gzip | base64 -w 0
  echo -e "\n-----RANCHER-LOG-DUMP-END-----"
}

# uncomment to get startup logs. Don't leave them on because it slows drone down too
# much
#tail -F /tmp/ranger.log &
#TPID=$!

trap "exit 1" 42
PWRAPPROC="$$"

PID=-1
run_ranger &
RANCHER_RUN_PID=$!
trap cleanup exit

echo Sleeping for 5 seconds before checking Ranger health
sleep 5

while ! curl -sf http://localhost:8080/ping; do
    sleep 2
done

# Echo a newline to handle the "pong" from the above ping
echo ""

rwWC=0
echo "Waiting up to 5 minutes for ranger-webhook deployment"
while ! kubectl --kubeconfig /etc/ranger/k3s/k3s.yaml rollout status -w -n cattle-system deploy/ranger-webhook &>/dev/null; do
  if [[ "$rwWC" == 150 ]]; then
    echo "ranger-webhook was not available within 5 minutes. failing fast"
    dump_ranger_logs
    exit 1
  fi
  if [[ $((rwWC%30)) == 0 ]] && [[ "$rwWC" != "0" ]]; then
    echo "ranger-webhook was not ready within $((rwWC/30)) minutes"
  fi
    sleep 2
    rwWC=$((rwWC + 1))
done
#kill $TPID

echo Running provisioning-tests $RUNARG

export KUBECONFIG=/etc/ranger/k3s/k3s.yaml
go test $RUNARG -v -failfast -timeout 60m ./tests/v2prov/tests/... || dump_ranger_logs
